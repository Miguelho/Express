include layout

block content
  .container
  h1 Register Page
  br
  div(ng-controller='RegisterController')
  form(role='form')
    .form-group
      input.form-control(type='text',ng-model='username',placeholder='Enter a valid username')
    .form-group
      input.form-control(type='text',ng-model='password',placeholder='Enter a valid password')
    button.btn.btn-default(ng-click="signup()") Registrarse


    a(href='/') 
      button.btn.btn-primary(type='button') Volver
  p {{serverResponse}}